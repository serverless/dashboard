{
  "name": "otel-extension",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "mocha \"test/**/*.test.js\"",
    "build": "esbuild src/index.js --bundle --platform=node --target=node12 --minify --outfile=build/index.js && esbuild src/wrapper.js --bundle --minify --platform=node --target=node12 --outfile=build/wrapper.js"
  },
  "eslintConfig": {
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/test/**",
            "prettier.config.js"
          ],
          "packageDir": [
            "./packages/aws-lambda-otel-extension/otel-extension/",
            "./"
          ]
        }
      ],
      "no-console": "off"
    }
  },
  "mocha": {
    "require": [
      "@serverless/test/setup/patch",
      "@serverless/test/setup/log",
      "@serverless/test/setup/mock-homedir",
      "@serverless/test/setup/mock-cwd",
      "@serverless/test/setup/restore-env"
    ]
  },
  "dependencies": {
    "@opentelemetry/api": "^1.1.0",
    "@opentelemetry/auto-instrumentations-node": "^0.27.2",
    "@opentelemetry/core": "^1.0.1",
    "@opentelemetry/instrumentation": "^0.27.0",
    "@opentelemetry/instrumentation-aws-lambda": "^0.28.1",
    "@opentelemetry/instrumentation-aws-sdk": "^0.5.0",
    "@opentelemetry/instrumentation-express": "^0.27.1",
    "@opentelemetry/instrumentation-graphql": "^0.27.2",
    "@opentelemetry/instrumentation-http": "^0.27.0",
    "@opentelemetry/instrumentation-koa": "^0.28.1",
    "@opentelemetry/resource-detector-aws": "^1.0.3",
    "@opentelemetry/resources": "^1.0.1",
    "@opentelemetry/sdk-trace-base": "^1.0.1",
    "@opentelemetry/sdk-trace-node": "^1.0.1",
    "lodash.clone": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.uniqby": "^4.7.0",
    "node-fetch": "^2.6.1",
    "protobufjs": "^6.11.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "esbuild": "^0.14.18"
  }
}
